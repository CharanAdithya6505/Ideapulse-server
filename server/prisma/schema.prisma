generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Blogs {
  id            Int      @id @default(autoincrement())
  title         String
  content       String
  author        String
  image         String?
  category      String
  authorPic     String?
  publishedDate DateTime  @default(now())
  matter        String?
  tags          Tags[]
}

model Tags {
  id     Int    @id @default(autoincrement())
  name   String
  blog   Blogs? @relation(fields: [blogId], references: [id])
  blogId Int?
}




